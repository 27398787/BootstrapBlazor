@inherits BootstrapComponentBase

<div @ref="@ThemeElement">
    <div class="btn btn-theme" data-toggle="tooltip" title="@Title" data-placement="left">
        <div class="theme-bar">
            <span class="theme-color bg-danger"></span>
            <span class="theme-color bg-success"></span>
        </div>
        <div class="theme-bar">
            <span class="theme-color bg-info"></span>
            <span class="theme-color bg-warning"></span>
        </div>
    </div>

    <div class="theme-list">
        <div class="theme-header">
            <div class="flex-fill">请选择主题</div>
            <div class="theme-close"><span aria-hidden="true">&times;</span></div>
        </div>
        @foreach (var item in Themes)
        {
            <div class="@GetThemeItemClass(item)" @onclick="@(e => OnClickTheme(item))">
                @item.Text
            </div>
        }
    </div>
</div>
