<ValidateForm class="form-inline" Model="@Model" OnValidSubmit="@OnValidSubmit" OnInvalidSubmit="@OnInvalidSubmit">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <BootstrapInput placeholder="请输入 ..." @bind-Value="@Model.Name">
            </BootstrapInput>
        </div>
        <div class="form-group col-12 col-sm-6">
            <BootstrapInputNumber placeholder="请输入 ..." @bind-Value="@Model.Count">
            </BootstrapInputNumber>
        </div>
        <div class="form-group col-12 col-sm-6">
            <DateTimePicker placeholder="请输入 ..." @bind-Value="@Model.DateTime">
            </DateTimePicker>
        </div>
        <div class="form-group col-12 col-sm-6">
            <Select Items="@Educations" @bind-Value="@Model.Education">
            </Select>
        </div>
        <div class="form-group col-12">
            <CheckboxList TModel="SelectedItem" TValue="IEnumerable<string>" @bind-Value="@Model.Hobby" Items="@Hobbys"
                          ValueField="Value" TextField="Text" CheckedField="Active">
            </CheckboxList>
        </div>
        <div class="form-group col-12">
            <Button ButtonType="@ButtonType.Submit" Text="提交表单"></Button>
        </div>
    </div>
</ValidateForm>
<Logger @ref="Trace2" class="mt-3" />
