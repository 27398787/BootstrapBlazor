@namespace BootstrapBlazor.Components
@inherits ModalDialogBase

<div class="@ClassName" role="document" @ref="DialogElement">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Title</h5>
            <Button Color="Color.None" class="close" data-dismiss="modal" aria-label="Close" OnClickWithoutRender="@OnClickClose">
                <span aria-hidden="true">&times;</span>
            </Button>
        </div>
        <CascadingValue Name="BodyContext" Value="@BodyContext" IsFixed="true">
            <div class="modal-body">
                @BodyTemplate
            </div>
            @if (ShowFooter)
            {
                <div class="modal-footer">
                    @if (ShowCloseButton)
                    {
                        <Button Color="Color.None" class="btn btn-secondary" data-dismiss="modal"
                                Text="关闭" Icon="fa fa-times" OnClickWithoutRender="@OnClickClose">
                        </Button>
                    }
                    @FooterTemplate
                </div>
            }
        </CascadingValue>
    </div>
</div>
