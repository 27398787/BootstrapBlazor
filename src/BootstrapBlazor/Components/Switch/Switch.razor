@namespace BootstrapBlazor.Components
@inherits SwitchBase

@if (IsShowLabel)
{
    <label class="control-label">@DisplayText</label>
}
<div @attributes="@AdditionalAttributes" class="@ClassName" @onclick="@OnClick">
    <input type="checkbox" class="switch-input" checked="@Value" disabled="@Disabled" />
    <span class="@CoreClassName" style="@StyleName"></span>
    @if (!string.IsNullOrEmpty(Text))
    {
        <span class="switch-label">
            @Text
        </span>
    }
</div>
