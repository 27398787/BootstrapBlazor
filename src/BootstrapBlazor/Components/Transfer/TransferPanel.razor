@namespace BootstrapBlazor.Components
@inherits TransferPanelBase

<div class="transfer-panel">
    <p class="transfer-panel-header">
        <Checkbox TItem="SelectedItem" DisplayText="@Text" State="@HeaderCheckState()" OnStateChanged="@OnHeaderCheck" @ref="HeaderCheckbox" />
    </p>
    <div class="transfer-panel-body">
        <div role="group" aria-label="checkbox-group" class="checkbox-group transfer-panel-list">
            @foreach (var item in Items)
            {
                @RenderItem(item)
            }
        </div>
        <p class="transfer-panel-empty" style="display: none;">无匹配数据</p>
        <p class="transfer-panel-empty" style="display: none;">无数据</p>
    </div>
</div>
