@namespace BootstrapBlazor.Components
@inherits AutoCompleteBase

@if (ValueExpression != null && DisplayText != null)
{
    <label class="control-label" for="@Id">@DisplayText</label>
}
<div class="@ClassString">
    <input @attributes="AdditionalAttributes" class="@ClassName" autocomplete="off" type="text" placeholder="@PlaceHolder" data-original-title="@ErrorMessage" value="@CurrentValueAsString" @oninput="@OnInput" @onblur="@OnBlur" />
    <i class="fa fa-spinner fa-spin fa-fw"></i>
    <div class="select-dropdown">
        <ul class="dropdown-list">
            @if (Items.Any())
            {
                @foreach (var item in Items)
                {
                    <li class="dropdown-item">
                        <a @onclick="@(e => OnItemClick(item))">@item</a>
                    </li>
                }
            }
            else
            {
                <li class="dropdown-item">@DefaultValue</li>
            }
        </ul>
    </div>
</div>
<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>
