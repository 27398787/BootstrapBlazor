@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

@if (ScreenSize > ViewModelResponsiveWidth)
{
    <td @attributes="@AdditionalAttributes">
        <div class="table-cell">@Text</div>
    </td>
}
else
{
    <div class="table-cell">@Text</div>
}

@code {
    /// <summary>
    /// 获得/设置 单元格内容
    /// </summary>
    [Parameter]
    public string? Text { get; set; }

    /// <summary>
    ///
    /// </summary>
    [CascadingParameter(Name = "ScreenSize")]
    public int ScreenSize { get; set; }

    /// <summary>
    ///
    /// </summary>
    [CascadingParameter(Name = "ViewModelResponsiveWidth")]
    public int ViewModelResponsiveWidth { get; set; }
}