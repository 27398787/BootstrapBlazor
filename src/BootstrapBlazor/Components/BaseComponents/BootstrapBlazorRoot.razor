@inherits ComponentBase
@namespace BootstrapBlazor.Components

<ErrorLogger>
    @RenderBody()

    <Dialog />
    <PopoverConfirm />
    <SweetAlert />
    <Print />

    <Download />
</ErrorLogger>

<FullScreen />
<Clipboard />
<Title />
<ResizeNotification />

<Message @ref="MessageContainer" />
<Toast @ref="ToastContainer" />

@code {
    RenderFragment RenderChildContent =>
    @<CascadingValue Value="this" IsFixed="true">
        @ChildContent
    </CascadingValue>;
}
