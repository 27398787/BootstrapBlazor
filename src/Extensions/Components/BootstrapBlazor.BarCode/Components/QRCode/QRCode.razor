@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

<div @attributes="@AdditionalAttributes" class="@ClassString" data-bb-width="@Width" data-bb-light-color="@LightColor" data-bb-dark-color="@DarkColor" @ref="QRCodeElement">
    <div class="qrcode-img" style="@ImageStyleString"></div>
    @if (ShowButtons)
    {
        <div class="input-group">
            <input type="text" class="form-control" placeholder="@PlaceHolder" @bind="@Content" @bind:event="onchange">
            <Button Icon="@ClearButtonIcon" Text="@ClearButtonText" Color="@Color.Secondary" OnClick="@Clear"></Button>
            <Button Icon="@GenerateButtonIcon" Text="@GenerateButtonText" Color="@Color.Success" OnClick="@Generate"></Button>
        </div>
    }
</div>
