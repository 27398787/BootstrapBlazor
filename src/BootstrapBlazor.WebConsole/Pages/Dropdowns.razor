            <div class="form-group col-6 col-sm-4 col-md-3 col-lg-auto"><Dropdown TagName="button" Items="items" Value="items[0]" ValueChanged="@ShowMessage" Color="Color.Info">Info</Dropdown></div>
            <div class="form-group col-6 col-sm-4 col-md-3 col-lg-auto"><Dropdown TagName="button" Items="items" Value="items[0]" ValueChanged="@ShowMessage" Color="Color.Warning">Warning</Dropdown></div>
