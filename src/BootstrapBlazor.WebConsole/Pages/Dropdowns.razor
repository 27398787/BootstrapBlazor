@page "/dropdowns"

<Block Title="Dropdown 下拉菜单" Introduction="使用 TagName='a' 开启带有 button 标签的下拉表">
    <CardBodyTemplate>
        <Dropdown Id="dropdown" TagName="button" Items="items" Value="items[0]" ValueChanged="@ShowMessage" Color="Color.Secondary">Dropdown button</Dropdown>
    </CardBodyTemplate>
    <CodeTemplate>
        <pre>
&lt;Dropdown Color="Color.Primary Id="dropdown" TagName="button" Items="items" Value="items[0]" ValueChanged="@@ShowMessage" Color="Color.Secondary""&gt;Dropdown button&lt;/Dropdown&gt;
    </pre>
    </CodeTemplate>
</Block>

