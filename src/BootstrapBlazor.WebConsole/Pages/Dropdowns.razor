&lt;Dropdown Color="Color.Primary Id="dropdown" TagName="button" Items="items" Value="items[0]" ValueChanged="@@ShowMessage" Color="Color.Info" ShowSplit="true"&gt;Secondary&lt;/Dropdown&gt;
&lt;Dropdown Color="Color.Primary Id="dropdown" TagName="button" Items="items" Value="items[0]" ValueChanged="@@ShowMessage" Color="Color.Warning" ShowSplit="true"&gt;Warning&lt;/Dropdown&gt;
&lt;Dropdown Color="Color.Primary Id="dropdown" TagName="button" Items="items" Value="items[0]" ValueChanged="@@ShowMessage" Color="Color.Danger" ShowSplit="true"&gt;Danger&lt;/Dropdown&gt;
    </pre>
    </CodeTemplate>
</Block>

